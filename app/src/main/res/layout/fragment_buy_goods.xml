<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_fbg_main_goods_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/circle_elves_ball"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_fbg_goods_name"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:background="@drawable/shape_corner_two"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_corner_two">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格:"
            android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥  "
                android:textSize="20sp"
                android:textColor="#f00"/>
            <TextView
                android:id="@+id/tv_fbg_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.75"
                android:textSize="25sp"
                android:textColor="#f00"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_fbg_school_address"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都信息工程大学 "
                android:textSize="20sp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_corner_two">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卖家:  "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_fbg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xia10681096"
            android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
           android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_corner_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="联系方式:"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fbg_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ:3164006711" />

                <TextView
                    android:id="@+id/tv_fbg_weixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号:xia10681096" />

                <TextView
                    android:id="@+id/tv_fbg_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号:13060083353" />
            </LinearLayout>
        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品简述："
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_fbg_goods_des"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:background="@drawable/shape_corner_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"/>
        <TextView
            android:id="@+id/tv_fbg_goods_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品图片:"
            android:layout_gravity="center"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fbg_goods_pic"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>
    <Button
        android:background="@drawable/shape_corner"
        android:id="@+id/bt_fbg_cancel_schedule"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="取消预定"/>
    <Button
        android:background="@drawable/shape_corner"
        android:id="@+id/bt_fbg_schedule_center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预定"/>

</RelativeLayout>