<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名:"/>
        <EditText
            android:id="@+id/et_fi_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品名字"
            android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品信息:"/>
        <EditText
            android:id="@+id/et_fi_goods_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品描述"
            android:lines="6"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格:" />
        <EditText
            android:id="@+id/et_fi_goods_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入商品价格"
            android:lines="1"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="20sp"
            android:textColor="#f00"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式(三选一)"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号:"/>
        <EditText
            android:id="@+id/et_fi_weixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入微信号"
            android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:       "/>
        <EditText
            android:id="@+id/et_fi_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入QQ号"
            android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"/>
        <EditText
            android:id="@+id/et_fi_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:lines="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_fi_up_main_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传商品主图片"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/iv_fi_main_goods_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/bt_fi_up_goods_pic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="上传商品图片"
    android:layout_gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fi_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/bt_fi_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>