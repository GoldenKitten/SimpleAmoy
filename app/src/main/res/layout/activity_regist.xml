<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xhm.simpleamoy.activity.RegistActivity"
    android:background="@drawable/regist_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/et_ar_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:drawableLeft="@drawable/username"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/et_ar_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:drawableLeft="@drawable/password"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/et_ar_affirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:drawableLeft="@drawable/password"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/et_ar_school_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="学校地址"
            android:drawableLeft="@drawable/school_address"
            android:maxLines="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_centerVertical="true"
                android:id="@+id/et_ar_idcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:drawableLeft="@drawable/idcode"/>
            <FrameLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ar_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码 " />
                <ImageButton
                    android:id="@+id/ib_ar_refresh_code"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_ar_up_head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传头像"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:id="@+id/ll_anchor_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:paddingTop="10dp">
            <ImageView
                android:id="@+id/iv_ar_head_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_circle_blue"
                android:padding="3dp"
                android:src="@drawable/circle_elves_ball"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/bt_ar_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"/>

    </LinearLayout>


</RelativeLayout>
